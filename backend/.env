# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pet_consultation

# Server Configuration
PORT=3002
NODE_ENV=development

# JWT Configuration
JWT_SECRET=pet_consultation_jwt_secret_key_2024_main_secret
JWT_ACCESS_SECRET=pet_consultation_jwt_access_secret_key_2024
JWT_REFRESH_SECRET=pet_consultation_refresh_jwt_secret_key_2024
ACCESS_TTL=15m
REFRESH_TTL=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# File Upload Configuration
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=pet-consultation
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
LOCAL_STORAGE=true
UPLOAD_PATH=./uploads

# Payment Configuration
MOCK_GATEWAY=true
ZARINPAL_MERCHANT_ID=your_zarinpal_merchant_id

# Time Zone and Scheduling
TZ=Asia/Tehran
ODD_WEEK_DAYS=sat,mon,wed
SLOT_START_HOUR=17
SLOT_END_HOUR=21
SLOT_INTERVAL=30
SLOT_HOLD_MINS=15
SPECIALIST_PRICE_TOMAN=280000

# SMS Configuration
SMS_PROVIDER=mock
SMS_API_KEY=your_sms_api_key
SMS_SENDER=your_sms_sender

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Default Admin
DEFAULT_ADMIN_MOBILE=09123456789
DEFAULT_ADMIN_PASSWORD=admin123456
DEFAULT_ADMIN_NAME=مدیر سیستم